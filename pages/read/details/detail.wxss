/* pages/read/details/detail.wxss */
.container{
  padding: 15px;
  box-sizing: border-box;
  height: initial;
  border-bottom: none;
}
.header{
  display: flex;
  justify-content: space-between;
}
.header-left{
  display: flex;
  align-items: center;
}
.avatar-img{
  margin-right: 15rpx;
}
.avatar{
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
.text{
  display: flex;
  flex-direction: column;
  font-size: 12px;
  font-weight: 200;
}
.text-author{
  display: block;
  margin-bottom: 8px;
  color: #89bdf7
}
.text-time{
  color: #888;
}
.listen{
  display: flex;
  align-items: center;
}
.audio-image{
  width: 25px;
  height: 25px;
}
.audio-text{
  font-size: 12px;
}
.head-content{
  line-height: 1.5;
  border-bottom: 1px solid #ebebeb;
}
.que-title{
  display: block;
  margin-bottom: 15px;
  font-size: 18px;
}
.que-content{
  display: block;
  font-size: 14px;
  margin-bottom: 15px;
}
.que-time{
  margin: 20px 0 15px 0;
  color: #888;
  font-size: 12px;
  text-align: right;
}
.title{
  margin: 20px 0 10px 0;
  font-size: 18px;
}
.artical{
  text-indent: 36rpx;
  font-size: 14px;
  line-height: 1.5;
}
.artical-edt{
  margin: 20px 0 10px 0;
  font-size: 12px;
  line-height: 1.5;
  color: #888;
}