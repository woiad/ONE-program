/* pages/read/read.wxss */
.carousel-img{
  width: 100%;
  height: 150px;
}
.content{
  height: calc(100% - 150px);
}
.scroll-y{
  height: 100%;
}
.card{
  margin: 20rpx;
  border: 1px solid #ebebeb;
  border-radius: 3px;
  overflow: hidden;
}
.item{
  padding: 30rpx;
}
.top{
  display: flex;
  justify-content: space-between;
  font-size: 16px;
}
.title{
  display: block;
  width: 80%;
  line-height: 20px;
}
.sort{
  display: block;
  height: 20px;
  padding: 0 8px;
  box-sizing: border-box;
  font-size: 10px;
  line-height: 18px;
  font-weight: 200;
  color: #89bdf7;
  border-radius: 3px;
  border: 1px solid #89bdf7;
  letter-spacing: 3px;
}
.author{
  display: block;
  font-size: 14px;
  margin-top: 10px;
}
.desc{
  display: block;
  font-size: 14px;
  margin-top: 5px;
  line-height: 1.5;
}