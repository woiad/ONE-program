.movies {
  height: 100%;
}

.movie {
  margin: 10px;
  box-sizing: border-box;
  box-shadow: 0 2px 2px #ebebeb;
  border: 1px solid #ebebeb;
}

.movie-cover {
  width: 100%;
  height: 180px;
  padding: 10px;
  box-sizing: border-box;
}
.movie-title{
  font-size: 12px;
  padding-left: 10px;
  color: #888;
}
.movie-score {
  padding: 10px 10px 8px 10px;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 200;
}