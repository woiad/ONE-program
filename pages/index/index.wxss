.vol-swiper{
  width: 100%;
  height: 100%;
}
.card_wrap{
  padding: 25rpx;
  box-sizing: border-box;
}
.card{
  padding: 20rpx;
  border: 1px solid #ebebeb;
  border-radius: 3px;
  box-shadow: 1px 1px 1px #ebebeb;
}
.card_top_img{
  width: 100%;
}
.card_top_text{
  display: flex;
  justify-content: space-between;
  padding: 10rpx 5rpx;
  font-size: 12px;
  color: #888;
}
.card_content{
  margin-top: 30rpx;
  min-height: 200rpx;
  padding: 0 5rpx;
  line-height: 1.4;
  font-size: 14px;
}
.card_time{
  font-size: 12px;
  color: #888;
  text-align: right;
}