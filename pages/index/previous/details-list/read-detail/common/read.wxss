.item{
  padding: 10px 0;
  margin: 0 15px;
  border-bottom: 1px solid #ebebeb;
}
.top{
  display: flex;
  justify-content: space-between;
  font-size: 16px;
}
.title{
  display: block;
  width: 80%;
  line-height: 20px;
}
.sort{
  display: block;
  height: 20px;
  padding: 0 8px;
  box-sizing: border-box;
  font-size: 10px;
  line-height: 18px;
  font-weight: 200;
  color: #89bdf7;
  border-radius: 3px;
  border: 1px solid #89bdf7;
  letter-spacing: 3px;
}
.author{
  display: block;
  font-size: 14px;
  margin-top: 10px;
}
.desc{
  display: block;
  font-size: 14px;
  margin-top: 5px;
  line-height: 1.5;
}