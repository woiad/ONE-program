/* pages/index/previous/details-list/detail/detail.wxss */
.container{
  height: 100%;
  border-top: 1px solid #ebebeb;
  border-bottom: 1px solid #ebebeb;
}
.card{
  padding: 20rpx;
  margin: 25rpx;
  box-sizing: border-box;
  border: 1px solid #ebebeb;
  border-radius: 3px;
  box-shadow: 1px 1px 1px #ebebeb;
}
.card-header-text{
  display: flex;
  justify-content: space-between;
  padding: 10rpx 5rpx;
  font-size: 12px;
  color: #888;
  box-sizing: border-box;
}
image{
  width: 100%;
}
.card-content{
  margin-top: 30rpx;
  font-size: 14px;
  padding: 0 5rpx;
  line-height: 1.4;
  box-sizing: border-box;
}
.content{
  display: block;
  width: 100%;
  min-height: 200rpx;
}
.card-bot{
  font-size: 12px;
  color: #888;
  text-align: right;
}